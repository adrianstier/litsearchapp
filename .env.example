# API Keys (optional - will work without these but with limitations)

# Anthropic API for synthesis (optional)
ANTHROPIC_API_KEY=

# OpenAI API for synthesis (alternative to Anthropic, optional)
OPENAI_API_KEY=

# SerpAPI for Google Scholar (optional, paid)
SERPAPI_KEY=

# Crossref API (free, no key needed but you can add email for polite use)
CROSSREF_MAILTO=your-email@example.com

# Rate limiting
PUBMED_RATE_LIMIT=3  # requests per second
SCHOLAR_RATE_LIMIT=0.5  # requests per second
ARXIV_RATE_LIMIT=1  # requests per second

# Cache settings
CACHE_DIR=./cache
CACHE_EXPIRY_DAYS=30

# Output settings
PAPERS_DIR=./papers
OUTPUT_DIR=./output

# Debug
DEBUG=false
LOG_LEVEL=INFO